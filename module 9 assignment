#loading r dataset
data("mtcars")
head(mtcars)

#base r graphics
#scatter plot: horsepower vs.mpg
plot(mtcars$hp, mtcars$mpg,
     main = "Base R: MPG vs. Horsepower",
     xlab = "Horsepower (hp)",
     ylab = "Miles per Gallon (mpg)",
     col  = "blue")

#histogram: distribution of mpg
hist(mtcars$mpg,
     main = "Base R: Distribution of MPG",
     xlab = "Miles per Gallon",
     col  = "lightgreen",
     border = "black")

#lattice graphics
library(lattice)

#conditional scatterplot: mpg vs hp by number of cylinders
xyplot(mpg ~ hp | factor(cyl),
       data = mtcars,
       main = "Lattice: MPG vs. HP by Cylinders",
       xlab = "Horsepower",
       ylab = "MPG")
#box plot: mpg by cylinder
bwplot(mpg ~ factor(cyl),
       data = mtcars,
       main = "Lattice: MPG by Cylinders",
       xlab = "Cylinders",
       ylab = "Miles per Gallon")

#ggplot2
library(ggplot2)

#scatterplot with smoothing
ggplot(mtcars, aes(x = hp, y = mpg, color = factor(cyl))) +
  geom_point(size = 2) +
  geom_smooth(method = "lm", se = FALSE) +
  labs(title = "ggplot2: MPG vs. HP with Trend by Cylinders",
       x = "Horsepower",
       y = "Miles per Gallon",
       color = "Cylinders")

#faceted histogram of mpg by cylinders
ggplot(mtcars, aes(x = mpg, fill = factor(cyl))) +
  geom_histogram(binwidth = 3, color = "black") +
  facet_wrap(~ cyl) +
  labs(title = "ggplot2: MPG Distribution by Cylinders",
       x = "Miles per Gallon",
       y = "Count")








